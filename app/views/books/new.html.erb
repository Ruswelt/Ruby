 <p>Create New Book</p>
 <% if @book.errors.any? %>
 <ul>
   <% @book.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>
   <% end %>
 </ul>
 <% end %>
 <%= form_for @book, url: { action: "create" } do |f| %>
    Name: <%= f.text_field :name %> <br><br>
    Author: <%= f.text_field :author %> <br><br>
    <%= submit_tag 'Create' %>
    <% end %>